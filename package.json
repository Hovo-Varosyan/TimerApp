{
  "name": "timerlocal",
  "version": "1.0.0",
  "description": "im pordznakan jamacuycn",
  "main": "./src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "nodemon --exec electron ./src/index.js"
  },
  "build": {
    "appId": "myArmTimer",
    "productName": "My Timer",
    "publish": {
      "provider": "github",
      "owner": "Hovo-Varosyan",
      "repo": "TimerApp",
      "releaseType": "release"
    },
    "mac": {
      "category": "Utility",
      "icon": "./public/images/icon.ico"
    },
    "linux": {
      "maintainer": "Hovo",
      "icon": "./public/images/icon.ico",
      "synopsis": "im pordznakan jamacuycn",
      "category": "Utility",
      "desktop": {
        "name": "My Timer App",
        "comment": "A sample application",
        "genericName": "Utility",
        "terminal": false
      }
    },
    "win": {
      "target": "nsis",
      "icon": "./public/images/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "installerIcon": "./public/images/setupicon.ico",
      "uninstallerIcon": "./public/images/setupicon.ico",
      "uninstallDisplayName": "inchu eq jnjum im cragirn",
      "license": "./public/license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createStartMenuShortcut": true,
      "shortcutName": "My Timer"
    }
  },
  "keywords": [],
  "author": "Hovo",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "nodemon": "^3.0.1"
  }
}
